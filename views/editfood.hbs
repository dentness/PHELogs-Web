<main>
    <div class="row">
        <div class="col">
            <h1 class="text-center">Edit Food Weight</h1>
        </div>
    </div>
    <div class="row w-100 justify-content-center">
        <div class="col-xl-4 col-md-4 col-sm-12">
            <form class="justify-content-center" id="form-id"  method="post">
                <div class="form-group">
                    <input type="hidden" name="id" value="{{ _id }}"/>
                    <span>Food: {{ description }} </span>
                    <span>Multiplier: {{ phe_multiplier}} </span>
                </div>
                <div class="form-group">
                    <label for="weight">Weight</label>
                    <input type="number" class="form-control" name="weight"/>
                </div>
                <div class="form-group">
                    <div class="btn-group-justified text-center">
                        <a class="btn btn-primary" href="/" onclick="document.getElementById('form-id').submit();return false;">Save</a>
                        <a class="btn btn-primary" href="/today">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
